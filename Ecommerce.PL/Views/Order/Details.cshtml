                <div class="col-lg-6 col-md-12 col-sm-12">
                    <h1>Customer Detail</h1>
                    <h4 class="mb-20 pt-20">@Model.Customer.name</h4>
                    <p>@Model.Customer.address</p>
                    <div class="price">@Model.Customer.phone </div>
                 
                </div>
                <div class="col-lg-6 col-md-12 col-sm-12">
                    <div class="product-detail-desc pd-20 card-box height-100-p">

                        <h1>Product Detail</h1>

                        <div class="mx-w-150">
                            <div class="form-group">

                                @foreach (var item in Model.OrderProduct)
                                {
                                    <label class="text-blue">@item.Product.name</label>
                                    <label class="text-blue">@item.Product.quantity</label>
                                    <label class="text-blue">@item.Product.price</label>

                                }

                                <label class="text-blue">@Model.orderTime</label>

                            </div>
                        </div>
