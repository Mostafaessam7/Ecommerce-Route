@model IEnumerable<Ecommerce.BLL.Model.CustomerVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="card-box mb-30">
    <h2 class="h4 pd-10">All Customer</h2>
    <a class="btn btn-primary pd-10" asp-action="Create" asp-controller="Customer">Add Customer</a>
    <a class="btn btn-primary pd-10" asp-action="CheckProducts" asp-controller="Customer"> check products by cst Name</a>
    <table class="data-table table nowrap">
        <thead>
            <tr>
                <th class="table-plus datatable-nosort">Name</th>
                <th>Address</th>
                <th>Phone</th>        
                <th class="datatable-nosort">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                   
                    <td>
                        <h5 class="font-16">@item.name</h5>
                    </td>
                    <td>@item.address</td>
                    <td>@item.phone</td>
                    <td>
                        <div class="dropdown">
                            <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                <i class="dw dw-more"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                <a class="dropdown-item" asp-route-id="@item.id" asp-controller="Customer" asp-action="Details"><i class="dw dw-eye"></i> View</a>
                                <a class="dropdown-item" asp-route-id="@item.id" asp-controller="Customer" asp-action="Edit"><i class="dw dw-edit2"></i> Edit</a>
                                <a class="dropdown-item" asp-route-id="@item.id" asp-controller="Customer" asp-action="Delete"><i class="dw dw-delete-3"></i> Delete</a>
                            </div>
                        </div>
                    </td>
                </tr>

            }


        </tbody>
    </table>
</div>